<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Add New Mandi Item</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 1rem;
            background: #f8f9fa;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        form {
            background: #fff;
            padding: 1.8rem;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgb(0 0 0 / 0.1);
            max-width: 400px;
            width: 100%;
        }

        h2 {
            margin-bottom: 1.5rem;
            text-align: center;
            font-weight: 700;
            color: #2c3e50;
        }

        button {
            width: 100%;
            border-radius: 25px;
            font-weight: 600;
            padding: 10px 0;
        }
    </style>
</head>

<body>

    <form id="addItemForm">
        <h2>Add New Mandi Item</h2>

        <div class="mb-3">
            <label for="name" class="form-label">Item Name</label>
            <input type="text" id="name" class="form-control" placeholder="E.g. Ladyfinger (Bhindi)" required />
        </div>

        <div class="mb-3">
            <label for="imageUrl" class="form-label">Image URL</label>
            <input type="url" id="imageUrl" class="form-control" placeholder="Image link" required />
        </div>

        <div class="mb-3">
            <label for="category" class="form-label">Category</label>
            <select id="category" class="form-select" required>
                <option value="" disabled selected>Select category</option>
                <option value="vegetables">Vegetables</option>
                <option value="fruits">Fruits</option>
                <option value="grains">Grains</option>
                <option value="pulses">Pulses</option>
                <option value="spices">Spices</option>
                <option value="oilseeds">Oilseeds</option>
                <option value="others">Others</option>
            </select>
        </div>

        <div class="mb-3">
            <label for="price" class="form-label">Price (â‚¹)</label>
            <input type="number" id="price" class="form-control" min="0" placeholder="E.g. 40" required />
        </div>

        <button type="submit" class="btn btn-success">Add Item</button>
    </form>

    <script>
        const form = document.getElementById('addItemForm');

        form.addEventListener('submit', async (e) => {
            e.preventDefault();

            const name = form.name.value.trim();
            const imageUrl = form.imageUrl.value.trim();
            const category = form.category.value;
            const price = Number(form.price.value);

            try {
                const res = await fetch('/api/mandi-items', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ name, imageUrl, category, price }),
                });


                if (res.ok) {
                    alert('Item added successfully!');
                    window.location.href = "/farmer";
                    form.reset();
                } else {
                    const data = await res.json();
                    alert('Error: ' + (data.message || 'Failed to add item'));
                }
            } catch (error) {
                alert('Error: ' + error.message);
            }
        });


    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>