<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Farmer Market</title>

    <!-- Bootstrap 5 CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
        integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="style.css">

    <style>
        body {
            margin: 0;
            padding-bottom: 70px;
            font-family: sans-serif;
            overflow-x: hidden;
            overflow-y: auto;
        }

        .wether {
            text-align: center;
            margin-top: 20px;
        }

        .wether i {
            font-size: 40px;
            margin: 10px 0;
        }

        .searchbar {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 10px;
            margin: 20px 0;
        }

        .searchbar .box {
            display: flex;
            align-items: center;
            background: #d4d4d4;
            border-radius: 25px;
            padding: 5px 10px;
        }

        .searchbar input {
            border: none;
            background: transparent;
            outline: none;
            padding: 5px 10px;
        }

        .searchbar i {
            color: #333;
        }

        select.btn {
            font-size: 14px;
            border-radius: 9999px;
            padding: 4px 10px;
            background-color: palegreen;
            border: none;
        }

        .card img {
            height: 150px;
            object-fit: cover;
        }

        .card-title {
            font-size: 16px;
        }

        .card-body h6 {
            font-weight: bold;
        }

        .weather-icon.fa-sun {
            color: #FDB813;
        }

        /* Sunny - Gold */
        .weather-icon.fa-moon {
            color: #A3C9F9;
        }

        /* Moon - Light Blue */
        .weather-icon.fa-cloud-sun {
            color: #FDB813;
        }

        /* Cloudy Day - Gold */
        .weather-icon.fa-cloud-moon {
            color: #A3C9F9;
        }

        /* Cloudy Night - Blue */
        .weather-icon.fa-cloud {
            color: #B0BEC5;
        }

        /* Cloud - Gray */
        .weather-icon.fa-cloud-meatball {
            color: #90A4AE;
        }

        /* Thick Cloud - Dark Gray */
        .weather-icon.fa-cloud-showers-heavy {
            color: #4FC3F7;
        }

        /* Rain - Light Blue */
        .weather-icon.fa-cloud-sun-rain {
            color: #29B6F6;
        }

        /* Rainy Day - Blue */
        .weather-icon.fa-cloud-moon-rain {
            color: #0288D1;
        }

        /* Rainy Night - Deep Blue */
        .weather-icon.fa-bolt {
            color: #FFD700;
        }

        /* Lightning - Yellow */
        .weather-icon.fa-snowflake {
            color: #B3E5FC;
        }

        /* Snow - Icy Blue */
        .weather-icon.fa-smog {
            color: #9E9E9E;
        }

        /* Fog - Dusty Gray */

    </style>
</head>

<body>

    <!-- Weather Section -->
    <div class="wether">
        <h1 id="current-time">00:00</h1>
        <i id="weather-icon" class="fa-solid fa-sun"></i>
        <h3 id="temperature">20Â°C</h3>
        <h4 id="location-name">Ahmedabad</h4>
    </div>

    <!-- Search & Filters -->
    <div class="searchbar">
        <div class="box">
            <input type="text" placeholder="Type here..." />
            <i class="fa-solid fa-magnifying-glass"></i>
        </div>

        <select class="btn">
            <option value="">Category</option>
            <option value="vegetables">Vegetables</option>
            <option value="fruits">Fruits</option>
            <option value="grains">Grains</option>
            <option value="pulses">Pulses</option>
            <option value="spices">Spices</option>
            <option value="oilseeds">Oilseeds</option>
            <option value="others">Other Items</option>
        </select>

        <select class="btn">
            <option value="">Location</option>
            <option value="vegetables">Vegetable</option>
            <option value="fruits">Fruits</option>
            <option value="grains">Grains</option>
            <option value="pulses">Pulses</option>
            <option value="spices">Spices</option>
            <option value="oilseeds">Oilseeds</option>
            <option value="others">Other Items</option>
        </select>
    </div>

    <a href="add-item.html" class="btn btn-danger" style="border-radius: 9999px; font-size: 14px;">
        <i class="fa-solid fa-plus"></i> Add Item
    </a>

    <!-- Cards Grid -->
    <div class="container">
                  <div class="row justify-content-center"></div>    
        </div>
    </div>

    <!-- Bottom Navigation -->
    <div class="nav">
        <a href="/student"><i class="fa-solid fa-house"></i></a>
        <a href="/farmer"><i class="fa-solid fa-wheat-awn"></i></a>
        <a href="/helth"><i class="fa-solid fa-heart-pulse"></i></a>
        <a href="/schem"><i class="fa-solid fa-user"></i></a>
    </div>

    <!-- Optional JS for Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
    <script src="farmer.js"></script>
</body>

</html>
