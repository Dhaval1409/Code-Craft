<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Farmer Market</title>

  <!-- Bootstrap 5 CDN -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" />
  <link rel="stylesheet" href="/style.css" />

  <style>
    body {
      margin: 0;
      padding-bottom: 70px;
      font-family: sans-serif;
      overflow-x: hidden;
      overflow-y: auto;
    }

    .wether {
      text-align: center;
      margin-top: 20px;
    }

    .wether i {
      font-size: 40px;
      margin: 10px 0;
    }

    .searchbar {
      display: flex;
      justify-content: center;
      flex-wrap: wrap;
      gap: 10px;
      margin: 20px 0;
    }

    .searchbar .box {
      display: flex;
      align-items: center;
      background: #d4d4d4;
      border-radius: 25px;
      padding: 5px 10px;
    }

    .searchbar input {
      border: none;
      background: transparent;
      outline: none;
      padding: 5px 10px;
    }

    .searchbar i {
      color: #333;
    }

    select.btn {
      font-size: 14px;
      border-radius: 9999px;
      padding: 4px 10px;
      background-color: palegreen;
      border: none;
    }

    .card img {
      height: 150px;
      object-fit: cover;
    }

    .card-title {
      font-size: 16px;
    }

    .card-body h6 {
      font-weight: bold;
    }

    .weather-icon.fa-sun {
      color: #FDB813;
    }

    .weather-icon.fa-cloud {
      color: #B0BEC5;
    }

    .weather-icon.fa-cloud-sun {
      color: #FDB813;
    }

    .weather-icon.fa-cloud-showers-heavy {
      color: #4FC3F7;
    }

    .weather-icon.fa-bolt {
      color: #FFD700;
    }

    .weather-icon.fa-snowflake {
      color: #B3E5FC;
    }

    .weather-icon.fa-smog {
      color: #9E9E9E;
    }
  </style>
</head>

<body>

  <!-- Weather Section -->
  <div class="wether">
    <h1 id="current-time">00:00</h1>
    <i id="weather-icon" class="fa-solid fa-sun"></i>
    <h3 id="temperature">20°C</h3>
    <h4 id="location-name">Ahmedabad</h4>
  </div>

  <!-- Search & Filters -->
  <div class="searchbar">
    <div class="box">
      <input type="text" placeholder="Type here..." />
      <i class="fa-solid fa-magnifying-glass"></i>
    </div>

    <select class="btn">
      <option value="">Category</option>
      <option value="vegetables">Vegetables</option>
      <option value="fruits">Fruits</option>
      <option value="grains">Grains</option>
      <option value="pulses">Pulses</option>
      <option value="spices">Spices</option>
      <option value="oilseeds">Oilseeds</option>
      <option value="others">Other Items</option>
    </select>

    <select class="btn">
      <option value="">Location</option>
      <option value="ahmedabad">Ahmedabad</option>
      <option value="surat">Surat</option>
      <option value="rajkot">Rajkot</option>
      <option value="vadodara">Vadodara</option>
    </select>
  </div>

  <!-- Add Item Button -->
  <div class="text-center mb-3">
    <a href="/add-item" class="btn btn-danger" style="border-radius: 9999px; font-size: 14px;">
      <i class="fa-solid fa-plus"></i> Add Item
    </a>
  </div>

  <!-- Cards Grid -->
  <div class="container">
    <div class="row justify-content-center">
      <% if (items && items.length > 0) { %>
        <% items.forEach(item => { %>
          <div class="col-6 col-md-4 col-lg-3 mb-4">
            <div class="card h-100">
              <img src="<%= item.imageUrl %>" class="card-img-top" alt="<%= item.name %>" />
              <div class="card-body text-center">
                <h5 class="card-title"><%= item.name %></h5>
                <select class="form-select form-select-sm mb-2">
                  <option>1kg</option>
                  <option>500g</option>
                  <option>5kg</option>
                </select>
                <h6>₹<%= item.price %></h6>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <p class="text-center">No items added yet.</p>
      <% } %>
    </div>
  </div>

  <!-- Bottom Navigation -->
  <div class="nav text-center mt-4">
    <a href="/student"><i class="fa-solid fa-house"></i></a>
    <a href="/farmer"><i class="fa-solid fa-wheat-awn"></i></a>
    <a href="/helth"><i class="fa-solid fa-heart-pulse"></i></a>
    <a href="/schem"><i class="fa-solid fa-user"></i></a>
  </div>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/farmer.js"></script>
</body>

</html>
